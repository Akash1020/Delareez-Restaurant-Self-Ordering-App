<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.delareez">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckoutOrder"
            android:label="@string/check"
            android:theme="@style/OtherPages" />
        <activity
            android:name=".CreateMenu"
            android:label="Add New Menu"
            android:theme="@style/OtherPages" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".CustomerActivity" />
        <activity
            android:name=".MenuDetail"
            android:label="Menu Detail"
            android:theme="@style/OtherPages" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".FoodContent" />
        <activity android:name=".DrinkContent"></activity>
    </application>

</manifest>