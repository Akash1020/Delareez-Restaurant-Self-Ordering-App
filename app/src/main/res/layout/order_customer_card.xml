<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113dp">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/drink_image"
            android:layout_marginLeft="@dimen/md_keylines"
            android:text="@string/item_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/dark_grey"
            tools:ignore="RtlHardcoded"
            tools:text="@string/item_title" />

        <TextView
            android:id="@+id/drink_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/card_title"
            android:layout_below="@+id/card_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="5"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:text="Table " />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/drink_price"
            android:layout_alignBottom="@+id/drink_price"
            android:layout_alignStart="@+id/drink_price"
            android:layout_marginStart="23dp"
            android:text="example@gmail.com" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/card_title"
            android:layout_marginEnd="12dp"
            android:text="Status" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/card_title"
            android:layout_alignBottom="@+id/card_title"
            android:layout_alignEnd="@+id/textView5"
            android:text="Date" />

        <Button
            android:id="@+id/statuschange"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView5"
            android:autoText="false"
            android:text="Change Status"
            android:textColor="?attr/colorPrimary"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:text="12" />

    </RelativeLayout>

</android.support.v7.widget.CardView>